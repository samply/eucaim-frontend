{
	"name": "lens-demo",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"release": "vite dev --host",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write ./**/*.{js,svelte,html,ts}",
		"lint": "eslint \"./src/**/*.{js,ts,svelte}\"",
		"lint:fix": "eslint --fix \"./src/**/*.{js,ts,svelte}\"",
		"prelint": "npm run format",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"security:check": "npm audit",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.1.0",
		"@commitlint/config-conventional": "^19.1.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.38.0",
		"husky": "^9.0.9",
		"lint-staged": "^15.2.2",
		"playwright": "^1.57.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.45.8",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^6.4.1",
		"vitest": "^4.0.15"
	},
	"type": "module",
	"dependencies": {
		"@samply/lens": "^0.6.4",
		"@sveltejs/adapter-node": "^5.2.9",
		"cookie": "^1.1.1",
		"devalue": "^5.6.0"
	},
	"_comment": "This forces cookie to 0.7.0 to fix security issue (needed with svelteKit 2.49.2, probably not needed with v3)",
	"overrides": {
		"cookie": "^1.1.1"
	}
}
